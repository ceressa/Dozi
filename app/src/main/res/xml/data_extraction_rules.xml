<?xml version="1.0" encoding="utf-8"?><!--
   Dozi App - Data Extraction Rules
   Configures what data is backed up to cloud and transferred between devices.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!--
            Exclude sensitive health data and authentication info from cloud backup.
            Users should not have their medication logs, patterns, or auth tokens
            backed up to Google Drive for privacy and security.
        -->

        <!-- Exclude Room Database (contains medication logs and sync queue) -->
        <exclude domain="database" path="dozi_database"/>
        <exclude domain="database" path="dozi_database-shm"/>
        <exclude domain="database" path="dozi_database-wal"/>

        <!-- Exclude SharedPreferences (contains user patterns and potentially sensitive data) -->
        <exclude domain="sharedpref" path="dozi_prefs.xml"/>

        <!-- Exclude Firebase cache and authentication data -->
        <exclude domain="file" path="google_app_measurement.db"/>
        <exclude domain="file" path="google_app_measurement_local.db"/>
        <exclude domain="database" path="google_app_measurement.db"/>
        <exclude domain="database" path="google_app_measurement_local.db"/>

        <!-- Exclude temporary and cache files -->
        <exclude domain="cache"/>
        <exclude domain="no_backup"/>
    </cloud-backup>

    <device-transfer>
        <!--
            For device transfer, we also exclude sensitive data.
            Users should log in with their account on the new device to sync from Firestore.
        -->

        <!-- Exclude Room Database -->
        <exclude domain="database" path="dozi_database"/>
        <exclude domain="database" path="dozi_database-shm"/>
        <exclude domain="database" path="dozi_database-wal"/>

        <!-- Exclude SharedPreferences -->
        <exclude domain="sharedpref" path="dozi_prefs.xml"/>

        <!-- Exclude Firebase data -->
        <exclude domain="file" path="google_app_measurement.db"/>
        <exclude domain="file" path="google_app_measurement_local.db"/>
        <exclude domain="database" path="google_app_measurement.db"/>
        <exclude domain="database" path="google_app_measurement_local.db"/>

        <!-- Exclude temporary and cache files -->
        <exclude domain="cache"/>
        <exclude domain="no_backup"/>
    </device-transfer>
</data-extraction-rules>