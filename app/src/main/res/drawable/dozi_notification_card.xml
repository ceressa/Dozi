<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Modern gradyan: Turkuaz'dan pembeye -->
    <gradient
        android:type="linear"
        android:startColor="#B2EBF2"
        android:centerColor="#E1F5FE"
        android:endColor="#F8BBD0"
        android:angle="135" />

    <!-- Yumuşak köşeler -->
    <corners android:radius="20dp" />

    <!-- İç padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- İnce border (opsiyonel) -->
    <stroke
        android:width="1dp"
        android:color="#80E0F7FA" />
</shape>